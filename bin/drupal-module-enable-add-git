#!/bin/bash
# 08.01.2015
# v0.1

SCRIPT_HELP="
Install module, commit module to git.

Usage: {0} module_name"

. drupal-scripts-init

check_drush
check_drupal

if [ $# != 1 ]; then
	usage
	exit 1
fi

module_name="$1"

drush en -y "$module_name" \
	&& git add "sites/all/modules/$module_name" \
	&& git commit -m "modules: $module_name"
