#!/bin/bash

SCRIPT_HELP="
Show module version."

. drupal-scripts-init

check_drupal

module_name="$1"

#drush pmi "$module_name" | grep Version | cut -d':' -f2 | tr -d ' '

info=$(drupal-sql "SELECT info FROM {system} WHERE type = 'module' AND status=1 AND name='$module_name'")
version=$(echo "$info" | grep -o "\"version\";s:4:\"[0-9.]\+" | cut -d '"' -f4)

[ -n "$version" ] && echo "$version"